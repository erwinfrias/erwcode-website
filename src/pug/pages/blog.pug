extends ../template.pug
append variables
  - pageTitle       = 'Blog'
  - metaDescription = 'Disfruta del contenido que creamos semanalmente y forma parte de esta comunidad digital.'
  - ogTitle         = 'Blog'
  - ogDescription   = 'Disfruta del contenido que creamos semanalmente y forma parte de esta comunidad digital.'
  - ogUrl           = 'https://erwcode.com/blog'
  - ogImage         = 'https://erwcode.com/assets/images/erwcode.jpg'

block body
  //- Hero Section
  section.hero-image
    .hero-image__vector
    .hero-image__container.l-container
      .hero-image__item
        h1.hero-image__title.hero-image__title--portfolio Blog 🔥🎯
        p.hero-image__description Disfruta del contenido que creamos #[span in House] 🏡 y de las #[span grandes colaboraciones] 🤝 que hacemos con expertos de la materia. 💥
      .hero-image__item
        img(class="hero-image__illustration", loading="lazy", src="./assets/images/posting.svg", alt="Portafolio de ErwCode")
    .mouse-scroll.l-container
      img(class="mouse-scroll__icon", loading="lazy", src="./assets/images/mouse.svg", alt="Mouse Scroll")
