block variables
  //- Title Tags HTML
  - let siteName = 'ErwCode', pageTitle;

  //- Meta Tags SEO
  - let metaDescription, metaKewords;

  //- Open Graph Protocol
  - let ogTitle, ogDescription, ogUrl, ogImage;

doctype html
html(lang="es-MX")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    if pageTitle === 'Home'
      title= `${siteName} | Tecnologías de la Información & Marketing Digital`
      link(rel="canonical", href="https://erwcode.com")
    else
      title= `${pageTitle} | ${siteName}`
    meta(name="description" content= metaDescription)
    meta(name="keywords" content= metaKeywords)
    meta(name="author" content="ErwCode Technologies")
    meta(name="robots" content="index, follow")
    meta(name="theme-color" content="#0C3455")
    //- Open Graph Protocol
    meta(property="og:locate" content="es_MX")
    meta(property="og:locate:alternate" content="es_CO")
    meta(property="og:locate:alternate" content="es_AR")
    meta(property="og:type" content="website")
    if ogTitle === 'Home'
      meta(property="og:title" content = `${siteName} | Tecnologías de la Información & Marketing Digital`)
    else
      meta(property="og:title" content = `${ogTitle} | ${siteName}`)
    meta(property="og:description" content=ogDescription)
    meta(property="og:url" content=ogUrl)
    meta(property="og:site_name" content="ErwCode")
    meta(property="og:image" content=ogImage)
    //- Google Tag Manager
    script.
      (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
      new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
      j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
      'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
      })(window,document,'script','dataLayer','GTM-M2LFZ55');
    link(rel="shortcut icon" href="./assets/images/favicon.png")

  body
    //- Google Tag Manager (noscript)
    noscript: iframe(src='https://www.googletagmanager.com/ns.html?id=GTM-M2LFZ55', height='0', width='0', style='display:none;visibility:hidden')

    //- Load Facebook SDK for JavaScript
    #fb-root
    //- Your customer chat code
    .fb-customerchat(
      attribution='setup_tool',
      page_id='355409281675300',
      theme_color='#0084ff',
      logged_in_greeting='¡Hola! Escríbeme todas tus dudas',
      logged_out_greeting='¡Hola! Escríbeme todas tus dudas'
    )

    //- Menu Section
    include includes/menu.pug

    block body

    //- Footer Section
    include includes/footer.pug
